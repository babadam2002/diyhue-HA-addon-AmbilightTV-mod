    "webui": "http://[HOST]:[PORT:80]",
    "panel_icon": "mdi:home-lightbulb",
    "arch": [
        "armhf",
        "armv7",
        "aarch64",
        "amd64",
        "i386"
    ],
    "ports": {},
    "ports_description": {},
    "auth_api": true,
    "hassio_api": true,
    "host_network": true,
    "uart": true,
    "map": [
        "config:rw",
        "share:rw"
    ],
    "options": {
        "config_path": "/config/diyhue",
        "mac": "xx:xx:xx:xx:xx:xx",
